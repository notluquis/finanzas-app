{
  "name": "finanzas-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:prod",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json && npm run copy:sql",
    "copy:sql": "cp -r server/sql dist/server/",
    "preview": "vite preview",
    "server": "npx @dotenvx/dotenvx run -- tsx watch --tsconfig tsconfig.server.json server/index.ts",
    "predev:full": "node scripts/reset-dev.mjs",
    "dev:full": "concurrently \"npm:dev\" \"npm:server\"",
    "start": "node dist/server/index.js",
    "build:prod": "rm -rf dist && npm run build:server && npm run build:client",
    "deploy": "npm run build:prod && npm prune --omit=dev",
    "prod": "npm run build:prod && npm start",
    "env:encrypt": "npx @dotenvx/dotenvx encrypt",
    "env:decrypt": "npx @dotenvx/dotenvx decrypt",
    "prod:secure": "npx @dotenvx/dotenvx run -- npm start",
    "security:check": "npm audit && npx @dotenvx/dotenvx run --quiet -- echo 'âœ… Variables de entorno cargadas de forma segura'",
    "test:employees": "node test/employees.integration.test.ts",
    "migrate:timesheets": "npx @dotenvx/dotenvx run -- node scripts/migrate-timesheets.mjs",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:strict": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "type-check": "tsc --noEmit",
    "ci:check": "npm run lint:strict && npm run type-check"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.545.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.2",
    "papaparse": "^5.5.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@tailwindcss/vite": "^4.1.14",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.7.0",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.9"
  }
}
